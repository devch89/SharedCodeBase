<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base_navigation"
    app:startDestination="@id/SearchFragment">

    <fragment
        android:id="@+id/SearchFragment"
        android:name="com.chow.code_base_sdk.ui.CharacterSearchFragment"
        android:label="Search Characters"
        tools:layout="@layout/fragment_character_search">

        <action
            android:id="@+id/action_SearchFragment_to_DetailsFragment"
            app:destination="@+id/DetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/DetailsFragment"
        android:name="com.chow.code_base_sdk.ui.DetailsFragment"
        android:label="Character Description"
        tools:layout="@layout/fragment_character_search">

        <action
            android:id="@id/action_SearchFragment_to_DetailsFragment"
            app:destination="@+id/SearchFragment"/>

    </fragment>

</navigation>